<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Separator" x:Key="separatorBase">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style TargetType="Separator" x:Key="separatorWidthSmall" BasedOn="{StaticResource separatorBase}">
        <Setter Property="Width" Value="8"/>
    </Style>

    <Style TargetType="Separator" x:Key="separatorHeightMedium" BasedOn="{StaticResource separatorBase}">
        <Setter Property="Height" Value="20"/>
    </Style>

</ResourceDictionary>